[Unit]
Description=Wizblcoin's distributed currency daemon
After=network.target

[Service]
User=wizblcoin
Group=wizblcoin

Type=forking
PIDFile=/var/lib/wizblcoind/wizblcoind.pid
ExecStart=/usr/bin/wizblcoind -daemon -pid=/var/lib/wizblcoind/wizblcoind.pid \
-conf=/etc/wizbl/wizblcore.conf -datadir=/var/lib/wizblcoind -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
